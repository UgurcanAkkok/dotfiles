#!/bin/zsh

if [[ $(pgrep $0) ]]; then
    exit;
fi

getvol(){
    vol=`pamixer --get-volume`
    mute=`pamixer --get-mute`
    if [ $mute = "false" ]; then
        if (( $vol > 60 )); then
            printf "ğŸ”Š $vol"
        elif (( $vol > 30 )); then
            printf "ğŸ”‰ $vol"
        elif (( $vol > 0 )); then
            printf "ğŸ”ˆ $vol"
        else
            printf "ï€¦ $vol"
        fi
    else
        printf "ïš©"
    fi
}

getbat(){
    battery=`acpi | grep "Battery 0" | grep -o -E "[0-9]?[0-9]?[0-9]%" | tr -d "%"`
    if (( $battery > 90 )); then
        printf "ï‰€ $battery"
    elif (( $battery > 70 )); then
        printf "ï‰ $battery"
    elif (( $battery > 30 )); then
        printf "ï‰‚ $battery"
    elif (( $battery > 10 )); then
        printf "ï‰ƒ $battery"
    else
        printf "ï‰„ $battery"
    fi
    if [[ `acpi | grep Charging ` ]]; then
        printf " ïƒ§"
    fi
}

getmedia(){
    artist="$(playerctl metadata artist)"
    title="$(playerctl metadata title)"
    text="$title - $artist"

    if [ $(playerctl status 2> /dev/null) ];then
        printf "ï€  %.40s |" $text
    else
        printf ""
    fi
}

getconn(){
    conn=`nmcli d | grep -o -e "connected .*" | awk '{ print $2 }' | grep -m 1 -E "\w*"`
    printf "ï‚¬ $conn"
}

