##     totram=$(( `cat /proc/meminfo | grep "MemTotal" | grep -o -E "[[:digit:]]*"` / 1024.0 /1024 ))
##     freeram=$(( `cat /proc/meminfo | grep "MemAvailable" | grep -o -E "[[:digit:]]*"` / 1024.0 /1024 ))
##     usedram=`printf "%.2f" $(( $totram - $freeram ))`
##     printf $usedram
## }
## 
## getcpu(){
##     cat /sys/devices/system/cpu/cpu*/cpufreq/scaling_cur_freq | awk '{ mhz += $1 / 1000 / 1000 } END { printf("%0.2f", mhz / 8) }'
## }
## 
## get_cpuheat(){
##     sensors | grep "Core" | grep -o -E ".[0-9]{2}...C " | grep -o "[0-9.]\+" | awk '{sum += $1} END {printf "ï‹‰ %0.2f", sum/4}'
## }

while true; do
    ## ram=`getram`
    ## cpu=`getcpu`
    date=`date +"%H:%M %a %d %b"`
    vol=`getvol`
    bat=`getbat`
    media=`getmedia 2> /dev/null`
    conn=`getconn`
    ## cpuheat=`get_cpuheat`
    if [[ $1 = "-o" ]];then
        # echo " ï³ $date"
        return
    else
        xsetroot -name "$media $vol | $bat | $conn | ï³ $date"
        sleep 1
    fi
done
